# 教师注册
# introduction is nullable
POST http://{{host}}/account/teacher
Content-Type: application/json

{
  "username": "teacher1",
  "password": "111",
  "grade": "小六",
  "subject": "生物",
  "name": "喵喵喵",
  "birth": "2018-05-01",
  "phone": "123456789",
  "price": 100,
  "introduction": "我可去你x的吧"
}

