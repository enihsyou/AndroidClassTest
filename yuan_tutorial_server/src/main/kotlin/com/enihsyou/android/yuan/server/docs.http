# 修改教师空闲时间
PUT http://{{host}}/account/teacher/freetime
Cookie: SESSION=YjFiMTkzNTktMDY5YS00NTQ2LWI3OWItZmJiOWUzMDdjZTk1; Path=/; HttpOnly
Content-Type: application/json

{
  "freetime": [
    {
      "start": 10,
      "end": 11
    },
    {
      "start": 11,
      "end": 12
    }
  ]
}
